<div class="guests-index">
  <div class="users">
    <% @users.each do |user| %>
      <div class="user">
        <p><%= user.business_name %></p>
        <div class="services">
          <% user.services.each do |service| %>
            <div class="service">
              <p>
                <%= service.name %>
              </p>
              <p>
                Price: <%= service.price %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
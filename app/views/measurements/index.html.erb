<main class="container">

  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>

  <div class="header">
    <h1>List of measurements</h1>
    <%= link_to "New measurement", new_measurement_path, data: { turbo_frame: dom_id(Measurement.new) } %>
  </div>

  <%= turbo_frame_tag Measurement.new %>

  <%= turbo_frame_tag "measurements" do %>
    <%= render @measurements %>
  <% end %>
</main>